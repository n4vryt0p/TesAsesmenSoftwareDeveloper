@page "{handler?}"
@model LoginModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg">
<head>
    @await Html.PartialAsync("~/Pages/Shared/_title_meta.cshtml")
    @await Html.PartialAsync("~/Pages/Shared/_head_css_login.cshtml")
    <style>

    </style>

</head>

<body>
    @Html.AntiForgeryToken()
    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div></div>
            <div class="shape">
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row" style="height:0;">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a class="d-inline-block auth-logo">
                                    <img alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-semibold"></p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="cardX mt-4">

                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <a href="#" class="d-inline-block auth-logo">
                                        <img src="~/assets/images/layout_set_logo.png" alt="" height="80">
                                    </a>
                                    <h3 class="text-primary">Assesment</h3>
                                </div>
                                <div class="p-2 mt-4">
                                    <form id="lpsLogin">

                                        <div class="mb-3">
                                            <label for="username" class="form-label">Username</label>
                                            <input type="text" class="form-control" id="username" name="Usn" placeholder="Enter username">
                                        </div>

                                        <div class="mb-3">
                                            @*<div class="float-end">
                                            <a href="@Url.Action("PasswordResetBasic", "Authentication")" class="text-muted">Forgot password?</a>
                                            </div>*@
                                            <label class="form-label" for="password-input">Password</label>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input type="password" class="form-control pe-5 password-input" placeholder="Enter password" id="password-input" name="Password">
                                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted shadow-none password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                            </div>
                                        </div>

                                        <input type="hidden" id="g-recaptcha-response" name="Token">
                                        <input type="hidden" id="returnUrl" name="ReturnUrl" value="@Model.Login?.ReturnUrl">
                                        @* <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                                        <label class="form-check-label" for="auth-remember-check">Remember me</label>
                                        </div>*@

                                        <div class="mt-4">
                                            <button class="btn btn-success w-100" type="submit" onclick="subsmits(event)">Sign In</button>
                                        </div>

                                        <div class="mt-4 text-center">
                                            <div class="signin-other-title">
                                                <h5 class="fs-13 mb-4 title"></h5>
                                            </div>
                                            <div>
                                                <a type="button" class="btn btn-primary waves-effect waves-light" href="~/auth/register">Register?</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->

                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">&copy; <script>document.write(new Date().getFullYear())</script> ManageEngine. Crafted with <i class="mdi mdi-heart text-danger"></i> by Irvan Ramdhany</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>

    <!-- Mainly scripts -->
    @await Html.PartialAsync("~/Pages/Shared/_vendor_scripts_login.cshtml")
    <!-- JAVASCRIPT -->
    <!-- particles js -->
    <script src="~/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/assets/js/pages/particles.app.js"></script>
    <!-- password-addon init -->
    <script src="~/assets/js/pages/password-addon.init.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>