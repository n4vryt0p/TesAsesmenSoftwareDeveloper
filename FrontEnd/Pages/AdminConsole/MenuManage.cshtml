@page "{handler?}"
@model FrontEnd.Pages.AdminConsole.MenuManageModel
@{
    ViewData["Title"] = "Menus";
}
@section styles{
    <!--datatable css-->
    <link href="~/css/dx.light.css" rel="stylesheet" />
}
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Menu Manager</h5>
            </div>
            <div class="card-body">
                <div id="menuGrid"></div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!--datatable js-->
    <script src="~/js/dx.all.js"></script>
    <script src="~/js/dx.aspnet.data.js"></script>
    <script type="text/javascript">
        var $grups = @Html.Raw(Json.Serialize(Model.GroupDdl));
    </script>
    <script src="~/js/menu-page.js"></script>
}